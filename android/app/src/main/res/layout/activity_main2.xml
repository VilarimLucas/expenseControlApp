<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/email"
        android:layout_width="292dp"
        android:layout_height="44dp"
        android:backgroundTint="@color/blue"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="text"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="440dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="288dp"
        android:layout_height="38dp"
        android:backgroundTint="@color/blue"
        android:drawableRight="@drawable/eye"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:padding="10dp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="515dp" />

    <View
        android:id="@+id/topcolor3"
        android:layout_width="406dp"
        android:layout_height="368dp"
        android:background="@drawable/background_top3"
        tools:layout_editor_absoluteX="-76dp"
        tools:layout_editor_absoluteY="-74dp" />

    <View
        android:id="@+id/topcolor2"
        android:layout_width="409dp"
        android:layout_height="368dp"
        android:background="@drawable/background_top2"
        tools:layout_editor_absoluteX="-46dp"
        tools:layout_editor_absoluteY="-97dp" />

    <View
        android:id="@+id/topcolor4"
        android:layout_width="413dp"
        android:layout_height="368dp"
        android:background="@drawable/background_top4"
        tools:layout_editor_absoluteX="-120dp"
        tools:layout_editor_absoluteY="-113dp"

        />

    <TextView
        android:id="@+id/title"
        android:layout_width="251dp"
        android:layout_height="175dp"
        android:padding="40dp"
        android:text="@string/expenses"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="104dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="64dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/iconedin2"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="47dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="289dp"

        android:layout_height="37dp"
        android:backgroundTint="@color/blue"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="text"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="366dp" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="305dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Bregister"
        android:layout_width="327dp"
        android:layout_height="59dp"
        android:background="@drawable/background_buttonR"
        android:drawableEnd="@drawable/arrow3"
        android:paddingStart="20dp"
        android:text="Cadastrar"
        android:textAlignment="textStart"
        android:textColor="@color/blue"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="631dp" />

    <TextView
        android:id="@+id/Fpsswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Fpsswd"
        android:textColor="@color/blue"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="553dp" />


</androidx.constraintlayout.widget.ConstraintLayout>